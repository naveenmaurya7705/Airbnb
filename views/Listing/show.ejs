<%- layout('/Layouts/boilerplate') %>

    
    
 <div class="row ">
  <div class="col-10 offset-2 mt-3  ">
    <h1> List Details are below :</h1>
  </div>    
  <hr>
    <div class="card col-8 offset-2" >
         <img src="<%- listing.image.url %>" class="card-img-top show-img" alt="list Image"> 
        <div class="card-body">
  <% if (listing) { %>       
          <p class="card-text">
           <b> <%= listing.title %></b><br>
           <%= listing.description %><br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
        <%= listing.country %><br>
        <%= listing.createdAt %><br>
        </p>
        </div>
      </div>
    
    <% } else { %>
        <li>No listing found.</li>
    <% } %>
   
    <div style="display: flex; justify-content: space-around; align-items: center; ">
    <form action="/lists/<%= listing._id%>/edit" method="get">
        <button style="background-color: green; color: white; padding: 5px; border-radius: 5px;">Edit List</button>

    </form>
    <form action="/lists/<%= listing._id%>?_method=DELETE" method="post">
        <button style="background-color: red; color: white; padding: 5px; border-radius: 5px;">Delete List</button>


    </form>
   

  </div>
 </div>

